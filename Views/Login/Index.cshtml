@model LoginModel

@{
Layout = "_LayoutDeslogada";
ViewData ["Tittle"] = "Login";
}


<div class="text-center">

    @if (TempData["MensagemErro"] != null)
    {
        <div class="alert alert-danger mt-2" role="alert">
            <button type="button" class="btn btn-danger btn-sm close-alert" arial-label="Close">X</button>
            @TempData["MensagemErro"]
        </div>
    }

    <form asp-controller="Login" asp-action="Entrar" method="post">
        <div class="form-group">
            <label for="Login">Login</label>
            <input type="text" asp-for="Login"  class="form-control" id="Login" placeholder="Coloque seu login">
            @Html.ValidationMessageFor(x => x.Login)
        </div>
        <div class="form-group">
            <label for="Senha">Senha</label>
            <input type="password"  asp-for="Password" class="form-control" id="senha" placeholder="Password">
            @Html.ValidationMessageFor(x=> x.Password)

        </div>
        <button type="submit" class="btn btn-primary mt-2 w-100">Entrar</button>
    </form>
</div>