@model List<Contato>

@{
    ViewData["Tittle"] = "Controle de contato";
}
<div class="text-center">

    <div class="d-flex justify-content-start mx-4">
        <a class="btn btn-primary" role="button" asp-controller="Contato" asp-action="Criar">Adicionar um novo contato</a>
    </div>

    @if(TempData["MensagemSucesso"] != null){
        <div class="alert alert-success mt-2" role="alert">
            <button type="button" class="btn btn-danger btn-sm close-alert" arial-label="Close">X</button>
            @TempData["MensagemSucesso"]
        </div>
    }

    @if (TempData["MensagemErro"] != null)
    {
        <div class="alert alert-danger mt-2" role="alert">
            <button type="button" class="btn btn-danger btn-sm close-alert" arial-label="Close">X</button>
            @TempData["MensagemErro"]
        </div>
    }

    <h1 class="display-4">Listagem de contatos</h1>

    <table class="table table-striped display">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Nome</th>
                <th scope="col">Email</th>
                <th scope="col">Celular</th>
                <th scope="col">Funções</th>
            </tr>
        </thead>
        <tbody>
            @if(Model != null && Model.Any())
            {
                foreach(Contato contato in Model)
                {
                    <tr>
                        <td>@contato.Id</td>
                        <td>@contato.nome</td>
                        <td>@contato.email</td>
                        <td>@contato.celular</td>
                        <td>
                            <div class="btn-group" role="group">
                                <a role="button" class="btn btn-primary mx-2"  asp-route-id="@contato.Id" asp-controller="Contato" asp-action="Editar">Editar</a>
                                <a role="button" class="btn btn-danger mx-2" asp-route-id="@contato.Id" asp-controller="Contato" asp-action="ApagarConfirmacao">Apagar</a>
                            </div>
                        </td>
                    </tr>
                }

            }
        </tbody>
    </table>

</div>