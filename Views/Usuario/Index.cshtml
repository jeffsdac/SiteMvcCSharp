@model List<UsuarioModel>

@{
    ViewData["Tittle"] = "Listagem de Usuários";
}

<div class="text-center">

    <div class="d-flex justify-content-start">
        <a role="button" class="btn btn-primary" asp-controller="Usuario" asp-action="Criar">Adicionar novo usuário</a>
    </div>
    <h1 class="display-4">Listagem de Usuários</h1>

    @if (TempData["MensagemSucesso"] != null)
    {
        <div class="alert alert-success mt-2" role="alert">
            <button type="button" class="btn btn-danger btn-sm close-alert" arial-label="Close">X</button>
            @TempData["MensagemSucesso"]
        </div>
    }

    @if (TempData["MensagemErro"] != null)
    {
        <div class="alert alert-danger mt-2" role="alert">
            <button type="button" class="btn btn-danger btn-sm close-alert" arial-label="Close">X</button>
            @TempData["MensagemErro"]
        </div>
    }

    <table class="table">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Nome</th>
                <th scope="col">Login</th>
                <th scope="col">Email</th>
                <th scope="col">Data de cadastro</th>
                <th scope="col">Perfil</th>
                <th scope="col">Funções</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                @foreach (var user in Model)
                {
                      <tr>
                        <td>@user.Id</td>
                        <td>@user.Nome</td>
                        <td>@user.Login</td>
                        <td>@user.Email</td>
                        <td>@user.DataDeCadastro</td>
                        <td>@user.Perfil</td>
                        <td>
                            <div class="btn-group" role="group">
                                <a role="button" class="btn btn-primary mx-2" asp-route-id="@user.Id" asp-controller="Usuario" asp-action="Editar">Editar</a>
                                <a role="button" class="btn btn-danger mx-2" asp-route-id="@user.Id" asp-controller="Usuario" asp-action="ApagarConfirmacao">Apagar</a>
                            </div>
                        </td>
                      </tr>
    

                }
            }
        </tbody>
    </table>

</div>


